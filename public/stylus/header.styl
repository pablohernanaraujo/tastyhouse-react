.header
	background-color principal
	width 100%
	height 64px
	box-shadow 0 2px 2px 0 rgba(0,0,0,.14), 0 1px 5px 0 rgba(0,0,0,.12), 0 3px 1px -2px rgba(0,0,0,.2)

	& .logo
		width 210px
		margin 5px 0 0 10px
		float left

	& .nav
		float right
		height 100%

		& .nav-btn
			text-decoration none
			color blanco
			font-size 16px
			display flex
			align-items center
			height 64px
			transition background-color .4s ease
			float left
			margin-right 1px
			cursor pointer

			&:hover
				background-color rgba(50,50,50,0.2)

			& span
				padding 0 20px

		& .nav-btn-active
			background-color rgba(50,50,50,0.2)
			pointer-events none
			color alpha(blanco, 0.4)
