@import 'nib'

body
	background-color #fff
	color white
	font-family 'Roboto', sans-serif
	font-weight 300

.texto-gris
	color gris

.bg-principal
	background-color principal !important

.pages-enter
	opacity 0.01
	margin-left 600px
	transition opacity .5s ease-in, margin-left .5s ease
	position absolute

.pages-enter.pages-enter-active
	opacity 1
	margin-left 0

.pages-leave
	opacity 1
	transition opacity .5s ease

.pages-leave.pages-leave-active
	opacity 0

.splash
	display flex
	justify-content center
	align-items center
	height 100vh

.boxsizing
	box-sizing border-box

.contenedor
	margin-right auto
	margin-left auto
	padding-left 100px
	padding-right 100px

.fila
	padding 0 25px

@media screen and (max-width: 800px)
	.contenedor
		margin-right auto
		margin-left auto
		padding-left 0
		padding-right 0

@media screen and (min-width: 1201px)
	.contenedor
		margin-right auto
		margin-left auto
		padding-left 200px
		padding-right 200px
